
<h1 style="text-align:center">Nature is everywhere</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8">


        <div class="row">
        <% @plants.each do |plant| %>
          <% if plant.photo %>
          <div class="col-md-6">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path plant.photo.path %>')">
              <div class="card-category">
                <%= plant.height + " cm" %>
              </div>
              <div class="card-description">
                <h2><%= plant.description %></h2>
              </div>
                <%= link_to "", plant_path(plant), class: "card-link" %>

                <%= image_tag "http://lorempixel.com/400/400/people/#{rand(10) + 1}", class: "card-user avatar-large" %>

              </div>

            <div class="card-title">
              <%= link_to plant_path(plant), class: "card-title" do %>
              <p><%= "#{plant.price}â‚¬ | " %><em><%= plant.name + ", "%></em><%= plant.location %></p>
              <% end %>
            </div>
          </div>
          <% end %>
        <% end %>
       </div>

    </div>
    <div class="col-md-4" style="background-color: grey">
      Insert map here
    </div>
  </div>
</div>






