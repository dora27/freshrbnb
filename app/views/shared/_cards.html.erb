<div class="card-wrapper">
<h1 style="text-align:center">Nature is everywhere</h1>
  <div class="container">
    <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://ghk.h-cdn.co/assets/15/33/980x490/landscape-1439490128-plants.jpg');">
              <div class="card-category">
              <%= plant.height + " cm" %>
              </div>
              <div class="card-description">
                <h2><%= plant.description %></h2>
              </div>
              <img class="card-user avatar-large" src="https://pbs.twimg.com/profile_images/378800000644789989/ce8d603ebd257ab15721e9c8f71718d4_400x400.jpeg">
              <%= link_to "", plant_path(plant), class: "card-link" %>
          </div>
          <div class="card-title">
            <%= link_to plant_path(plant), class: "card-title" do %>
              <%= "#{plant.price}â‚¬ | " %><em><%= plant.name + ", "%></em><%= plant.location %>
            <% end %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


