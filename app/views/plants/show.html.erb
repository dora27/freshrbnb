<%= content_for(:title) do %>
Fresh Rbnb - <%= @plant.name %>
<% end %>

<div class="container navbar-marged">
  <div class="row show-plant">

    <div class="col-xs-12 col-md-3">
    <% if @plant.photo %>
      <%= cl_image_tag @plant.photo.path, width: 250, height: 550, crop: :fill %>
    </div>
     <% end %>

    <div class="col-xs-12 col-md-6">
      <div class="description-plant">
        <h3><b><%= @plant.name  %></b> - <%= @plant.price%> â‚¬ </h3>

          <div class="owner">
            <% if @plant.user.photo %>
              <%= cl_image_tag @plant.user.photo.path, height: 50, width: 50, crop: :fill,  class: "card-user avatar-large" %>
            <% end %>
            <% if @plant.user.first_name && @plant.user.last_name %>
              <h5 class="text-right"><%= @plant.user.first_name + " " + @plant.user.last_name %> </h5>
            <% end %>
          </div>

        <br>
        <br>
          <p class="fa fa-arrows-v" aria-hidden="true">  <%= @plant.height + "cm" %>  </p>
        <br>
        <br>
          <p class="fa fa-book" aria-hidden="true">  <%= @plant.description %> </p>
        <br>
        <br>

        <br>
        <br>
        </div>
      <div class="plant-reviews">
        <h1> Reviews </h1>
        <% @plant.reviews.each do |review| %>
        <p><%= @user.first_name%> <%= @user.last_name%> <%= review.rate %></p>
        <p><%= review.description%></p>
        <% end %>
        <%= link_to "Comment", new_plant_review_path(@plant) , class: "btn-treehouse" %>
      </div>
    </div>

    <div class="col-xs-12 col-md-3" style= "height:78vh width:120vh">
      <div class="form-book">
        <%= simple_form_for [@plant, @booking] do |f| %>
          <%= f.text_field :pick_up, placeholder: "dd/mm/yyyy",class: 'datepicker' %>
          <%= f.text_field :bring_back, placeholder: "dd/mm/yyyy", class: 'datepicker' %>
          <%= f.submit "Book", class: "btn-treehouse"%>
        <% end %>
      </div>

      <div class="map-plant">
      <p class="fa fa-map-marker" aria-hidden="true">  <%= @plant.location %> </p>
        <div id="map" style="width: 100%; height: 270px;"></div>
          <% content_for(:after_js) do %>
            <%= javascript_tag do %>
            $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
              }
            });
          });
          <% end %>
         <% end %>
       </div>
         <div class="share">
        <div class="share-links text-center">
        <br>
          <a href="#" class="share-link bg-facebook">
            <i class="fa fa-facebook"></i>
          </a>
          <a href="#" class="share-link bg-twitter">
            <i class="fa fa-twitter"></i>
          </a>
          <a href="#" class="share-link bg-email">
            <i class="fa fa-envelope-o"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>











