<%= content_for(:title) do %>
Fresh Rbnb - <%= @plant.name %>
<% end %>

<div class="media">

  <div class="media-body navbar-marged">
    <div class="media-section">
      <h1>Name: <%= @plant.name %> </h1>
      <div>
      <%= cl_image_tag @plant.photo.path, width: 600, height: 450, crop: :fill %>
      <%= cl_image_tag @plant.user.photo.path, height: 50, width: 50, crop: :fill,  class: "card-user avatar-large" %>
  <%= link_to "", plant_path(plant), class: "card-link" %>
</div>
</div>


    </div>
    <div class="media-section">
        <div class="product-category"><%= @plant.height + "cm"%></div>
    </div>
    <div class="media-section">
      <h3>Description:</h3>
      <p><%= @plant.description %></p>
    </div>
  </div>

  <div class="media-aside navbar-marged">
    <div class="media-section">
        <h2><%= @plant.price%> â‚¬</h2>
        <div class="product-category form-book">
        <%= simple_form_for [@plant, @booking] do |f| %>
          <%= f.input :pick_up %>
          <%= f.input :bring_back %>
          <%= f.submit "Book", class: "btn-treehouse"%>
        <% end %>
        </div>
    </div>
    <div class="media-section">
      <h3>Location</h3>
        <div id="map" style="width: 100%; height: 400px;"></div>
        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
          $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
            }
          });
        });
        <% end %>
       <% end %>
    </div>
    <div class="media-section">
      <h3>Share</h3>
      <div class="share-links">
        <a href="#" class="share-link bg-facebook">
          <i class="fa fa-facebook"></i>
        </a>
        <a href="#" class="share-link bg-twitter">
          <i class="fa fa-twitter"></i>
        </a>
        <a href="#" class="share-link bg-email">
          <i class="fa fa-envelope-o"></i>
        </a>
      </div>
    </div>
  </div>
</div>

