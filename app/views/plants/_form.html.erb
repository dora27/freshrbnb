<%= simple_form_for(@plant) do |f| %>
  <%= f.error_notification %>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-offset-3 navbar-marged">
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :height %>
        <%= f.input :price %>
        <%= f.input :location %>
        <%= f.input :photo, as: :attachinary %>

<!--          if we want to add a category later -->
<!--         <%#= f.input :category, collection: Restaurant::CATEGORY %> -->
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-primary"%>
      </div>
    </div>
    <% end %>
  </div>
</div>
